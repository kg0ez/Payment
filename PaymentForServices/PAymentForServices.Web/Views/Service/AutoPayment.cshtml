@model PAymentForServices.Web.Models.AutoPayment
<head>
    <link rel="stylesheet" href="~/css/Payment.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&family=Poppins:wght@500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="page__main-block main-block">
            <div class="main-block__container _container">
                <div class="main-block__body">
                    <div>
                        <h1 class="main-block__title">Добавить автооплату</h1>
                        <form class="main-block__form" asp-action="AutoPayment" asp-controller="Service">
                            <div class="form__block">
                                <label class="form__label" asp-for="Phone">Номер абонента:</label><br />
                                <input class="form__input" value="+375(" asp-for="Phone" />
                                <label class="form__label" asp-for="Phone">Ведите номер телефона</label><br />
                                <span asp-validation-for="Phone" />
                            </div>
                            <div class="form__block">
                                <input class="form__input" placeholder="Порог баланса, BYN(0.1 - 30)" asp-for="ThresholdAmount" />
                                <label class="form__label" asp-for="ThresholdAmount">Укажите, при каком балансе происходит автооплата</label><br />
                                <span asp-validation-for="ThresholdAmount" />
                            </div>
                            <div class="form__block">
                                <input class="form__input" placeholder="Размер платежа, BYN(0.5 - 9.9)" asp-for="PaymentAmount" />
                                <label class="form__label" asp-for="PaymentAmount">Определите сумму платежа</label><br />
                                <span asp-validation-for="PaymentAmount" />
                            </div>
                            <div>
                                <label></label>
                            </div>
                            <h1>Уведомления</h1>
                            <div class="form__block">
                                <label class="form__label" asp-for="PhoneNotification">Мобильный номер</label><br />
                                <input class="form__input" value="+375 (" asp-for="PhoneNotification" />
                                <label class="form__label" asp-for="PhoneNotification">Введите другой номер телефона для уведомлений об оплате</label><br />
                                <span asp-validation-for="PhoneNotification" />
                            </div>
                            <input class="form__submit" type="submit" value="Оплатить" />
                        </form>
                        <form class="main-block__form" asp-action="Cancel" asp-controller="Service">
                            <input class="form__submit" type="submit" value="Назад" />
                        </form>
                    </div>
                    <div>
                        <img class="main-body_img" align="right" src="~/img/Payment/usd.jpg" alt="Финансы" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

