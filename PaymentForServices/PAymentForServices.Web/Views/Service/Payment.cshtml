@model PAymentForServices.Web.Models.Payment
<head>
    <link rel="stylesheet" href="~/css/Payment.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&family=Poppins:wght@500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="page__main-block main-block">
            <div class="main-block__container _container">
                <div class="main-block__body">
                    <div>
                        <h1 class="main-block__title">@Model.NameService</h1>
                        <form class="main-block__form" asp-action="Payment" asp-controller="Service">
                            <div class="form__block">

                                <label class="form__label" asp-for="LastName">Фамилия:</label><br />
                                <input class="form__input" placeholder="Фамилия" value="@Model.LastName" asp-for="LastName" />
                                <span asp-validation-for="LastName" />
                            </div>
                            <div class="form__block">
                                <label class="form__label" asp-for="Name">Имя:</label><br />
                                <input class="form__input" placeholder="Имя" value="@Model.Name" asp-for="Name" />
                                <span asp-validation-for="Name" />
                            </div>
                            <div class="form__block">
                                <label class="form__label" asp-for="Partonymic">Очество:</label><br />
                                <input class="form__input" placeholder="Имя" value="@Model.Partonymic" asp-for="Partonymic" />
                                <span asp-validation-for="Partonymic" />
                            </div>
                            <div class="form__block">
                                <label class="form__label" asp-for="CodeTransaction">Номер услуги:</label><br />
                                <input class="form__input" value="@Model.CodeTransaction" placeholder="Номер услуги" asp-for="CodeTransaction" />
                                <span asp-validation-for="CodeTransaction" />
                            </div>
                            <div class="form__block">
                                <label class="form__label" asp-for="PaymentAmount">Сумма:</label><br />
                                <input class="form__input" type="number" value="@Model.PaymentAmount" placeholder="Сумма для оплаты" asp-for="PaymentAmount" />
                                <span asp-validation-for="PaymentAmount" />
                            </div>
                            <input class="form__input" value="@Model.NameService" asp-for="NameService" hidden="hidden" />
                            <input class="form__submit" type="submit" value="Оплатить" />
                        </form>
                        <form class="main-block__form" asp-action="Services" asp-controller="Service">
                            <input class="form__submit" type="submit" value="Назад" />
                        </form>
                    </div>
                    <div>
                        <img class="main-body_img" align="right" src="~/img/Payment/usd.jpg" alt="Финансы" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

