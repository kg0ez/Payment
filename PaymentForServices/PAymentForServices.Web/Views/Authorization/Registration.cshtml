@model PAymentForServices.Web.Models.Registration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link rel="stylesheet" href="~/css/Log_Reg.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&family=Poppins:wght@500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="page__main-block main-block">
            <div class="main-block__container _container">
                <div class="main-block__body">
                    <div>
                        <h1 class="main-block__title" align="center">Вход в <br /> Horizon - banking</h1>

                        <form method="post" class="main__form" asp-action="Registration" asp-controller="Authorization">
                            <div class="form__block from__two-card">
                                <div>
                                    <label class="form__title" asp-for="LastName">Фамилия</label><br />
                                    <input class="form__input-card" type="text" placeholder="Фамилия" asp-for="LastName" />
                                    @Html.ValidationMessageFor(model => model.LastName)
                                </div>
                                <div class="form-card">
                                    <label class="form__title" asp-for="Name">Имя</label><br />
                                    <input class="form__input-card" type="text" placeholder="Имя" asp-for="Name" />
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>

                            <div class="form__block">
                                <label class="form__title" asp-for="Partonymic">Очество</label><br />
                                <input class="form__input-card" type="text" placeholder="Очество" asp-for="Partonymic" />
                                @Html.ValidationMessageFor(model => model.Partonymic)
                            </div>
                            <div class="form__block">
                                <label class="form__title" asp-for="Phone">Номер телефона</label><br />
                                <input class="form__input-card" type="tel" placeholder="Номер телефона" asp-for="Phone" />
                                @Html.ValidationMessageFor(model => model.Phone)

                            </div>
                            <div class="form__block">
                                <label class="form__title" asp-for="Emain">Почта</label><br />
                                <input class="form__input-card" type="email" placeholder="Почта" asp-for="Emain" />
                                @*@Html.ValidationMessageFor(model => model.Emain)*@
                                <span asp-validation-for="Emain"/>
                            </div>
                            <div class="form__block from__two-card">
                                <div class="form-card">
                                    <label class="form__title" asp-for="Password">Пароль</label><br />
                                    <input class="form__input-card" type="password" asp-for="Password" />
                                    @Html.ValidationMessageFor(model => model.Password)

                                </div>
                                <div>
                                    <label class="form__title" asp-for="PasswordConfirm">Подтвердите</label><br />
                                    <input class="form__input-card" type="password" asp-for="PasswordConfirm" />
                                    @Html.ValidationMessageFor(model => model.PasswordConfirm)

                                </div>
                            </div>
                            <div class="form__block block-button">
                                <input class="form__button-card" type="submit" value="Отправить" />
                            </div>
                        </form>
                        <a asp-controller="Authorization" asp-action="Login">
                            <div class="main-link">Войти в аккаунт Horizon - banking</div>
                        </a>
                    </div>
                    <div class="right-block__img" align="center">
                        <img class="img-right" src="~/img/LogReg/log.jpg" alt="Финансы" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

